        <xpath expr="//div[@t-attf-class='footer o_standard_footer o_company_#{company.id}_layout']" position="replace">
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <!-- To add company accreditations image to report footer -->
                <div class="col-3 mb4 mx-auto d-block mb-1">
                    <img t-if="company.accreditations" t-att-src="image_data_uri(company.accreditations)" style="max-height: 40px;" alt="Accreditations"/>
                </div>
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <div t-field="company.report_footer"/>
                    </ul>
    
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
